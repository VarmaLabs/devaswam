<%# describes about each trust admin %>
<div class="box hoverable p-10 box-border-black">

  <div class="row">
    <div class="col-md-2 visible-md visible-lg" style="padding-left:0px;padding-right:0px">
      <%= display_image(trust_admin, :photo, "75%") %>
    </div>
    <div class="col-md-10">
      <%= link_to trust_admin.display_name, super_admin_trust_admin_path(trust_admin),
          :remote=>true, :class=>"heading3" %><br/>

      <div class="content"><%= trust_admin.trust.display_name if trust_admin.trust %></div>

      <div class="mt-10 pull-right text-color-gray fs-11 visible-md visible-lg">
        <%= display_time(trust_admin.created_at) %>
      </div>
  	</div>
  </div>

  <div class="cl"></div>

</div>

