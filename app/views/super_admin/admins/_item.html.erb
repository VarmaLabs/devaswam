<%# describes about each admin %>
<div class="box hoverable p-10 box-border-black">

  <div class="row">
    <div class="col-md-2 visible-md visible-lg">
      <%= display_image(admin, :photo, "75%") %>
    </div>
    <div class="col-md-10">
      <%= link_to admin.name, super_admin_admin_path(admin),
          :remote=>true, :class=>"heading3" %><br/>

      <div class="content"><%= scrap_word(admin.description, 100) %></div>

      <div class="mt-10 pull-right text-color-gray fs-11 visible-md visible-lg">
        <%= display_time(admin.created_at) %>
      </div>
  	</div>
  </div>

  <div class="cl"></div>

</div>

