<% if @admin %>
  <% if @admin.new_record? %>

  	// Fill the right box with first admin details
  	$('#div_admin_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

  	// Render the show partial to show flash message
  	$('#div_admin_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render admins List
  $('#div_admin_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_admin_index').html(noResultsText);
  $('#div_admin_details').html(noResultsText);

<% end %>
