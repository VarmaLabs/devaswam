
<%# Displays list of @trusts %>
<div id="div_trust_collections">
	<% @trusts.each do |trust| %>
		<div id="div_trust_<%= trust.id %>">
			<%= render :partial=>"item", :locals=>{:trust=>trust} %>
		</div>
	<% end %>
	<% if @trusts.blank? %>
		<div id="div_trust_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @trusts.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @trusts, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
