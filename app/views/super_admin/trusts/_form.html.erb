
<%# Renders a partial which is used to create a new trust %>

<%= form_for([:super_admin, @trust], :html => {:id=>"form_trust", :class=>"mb-0 form-horizontal", :role => "form", :method => (@trust.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @trust.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @trust.new_record? ? super_admin_trusts_path : super_admin_trusts_path(@trust) %>
    <%= hidden_field_tag :fmethod, @trust.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Name (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@trust,
                                              :object_name=>'trust',
                                              :field_name=>'name',
                                              :display_name=>'Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>
      <!-- Address (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@trust,
                                              :object_name=>'trust',
                                              :field_name=>'address',
                                              :display_name=>'Address',
                                              :field_type=>'string',
                                              :input_type=>'textarea',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Email (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@trust,
                                              :object_name=>'trust',
                                              :field_name=>'email',
                                              :display_name=>'Email',
                                              :field_type=>'string',
                                              :input_type=>'email',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Phone (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@trust,
                                              :object_name=>'trust',
                                              :field_name=>'phone',
                                              :display_name=>'Phone',
                                              :field_type=>'string',
                                              :input_type=>'tel',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>



      <!-- Description (text) -->
      <%= render :partial=>"field", :locals=>{:object=>@trust,
                                              :object_name=>'trust',
                                              :field_name=>'description',
                                              :display_name=>'Description',
                                              :field_type=>'text',
                                              :input_type=>'textarea',
                                              :required=>false,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@trust.new_record? ? "Create" : "Update"} Item" %>
			<%# if @trust.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', super_admin_trusts_path, :class=>"btn ml-10", :remote => true unless @trust.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

