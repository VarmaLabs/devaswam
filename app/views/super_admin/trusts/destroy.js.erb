<% if @trust %>
  <% if @trust.new_record? %>

  	// Fill the right box with first trust details
  	$('#div_trust_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

  	// Render the show partial to show flash message
  	$('#div_trust_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render trusts List
  $('#div_trust_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_trust_index').html(noResultsText);
  $('#div_trust_details').html(noResultsText);

<% end %>
