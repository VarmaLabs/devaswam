
<%# Displays list of @deities %>
<div id="div_deity_collections">
	<% @deities.each do |deity| %>
		<div id="div_deity_<%= deity.id %>">
			<%= render :partial=>"item", :locals=>{:deity=>deity} %>
		</div>
	<% end %>
	<% if @deities.blank? %>
		<div id="div_deity_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @deities.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @deities, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
