
<div class="row mb-30">
  <div class="col-md-3">
    <img alt="Thiruvannur Shiva Temple" src="http://www.kerala.com/kerala_destinations/images/guruvayoor.jpg" style="width:180px;">
  </div>
  <div class="col-md-9">
    <h2><%= @current_trust_admin.trust.name %></h2>

    <div class="cl"></div>
    <p><%= scrap_word(@current_trust_admin.trust.description, 100) %></p>
  </div>
</div>

<% @current_trust_admin.trust.temples.each_slice(3).each do |temples| %>
  <div class="row ">
    <% temples.each do |t| %>
      <div class="col-md-3">
        <h3><%= t.name %></h3>

        <div class="cl"></div>
        <p><%= scrap_word t.description, 80 %></p>


        <div class="cl"></div>
        <% t.deities.each do |d| %>
          <%= link_to d.name, trust_admin_deity_offerings_path(d) %>
          <div class="cl"></div>
        <% end %>
        <div class="cl"></div>

      </div>
    <% end %>
  </div>
<% end %>



