
<%# Renders a partial which is used to create a new deity %>

<%= form_for([:admin, @deity], :html => {:id=>"form_deity", :class=>"mb-0 form-horizontal", :role => "form", :method => (@deity.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @deity.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @deity.new_record? ? admin_deities_path : admin_deities_path(@deity) %>
    <%= hidden_field_tag :fmethod, @deity.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Name (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@deity,
                                              :object_name=>'deity',
                                              :field_name=>'name',
                                              :display_name=>'Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Description (text) -->
      <%= render :partial=>"field", :locals=>{:object=>@deity,
                                              :object_name=>'deity',
                                              :field_name=>'description',
                                              :display_name=>'Description',
                                              :field_type=>'text',
                                              :input_type=>'textarea',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Temple (integer) -->
      <%= render :partial=>"field", :locals=>{:object=>@deity,
                                              :object_name=>'deity',
                                              :field_name=>'temple_id',
                                              :display_name=>'Temple',
                                              :field_type=>'integer',
                                              :input_type=>'number',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Trust (integer) -->
      <%= render :partial=>"field", :locals=>{:object=>@deity,
                                              :object_name=>'deity',
                                              :field_name=>'trust_id',
                                              :display_name=>'Trust',
                                              :field_type=>'integer',
                                              :input_type=>'number',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@deity.new_record? ? "Create" : "Update"} Item" %>
			<%# if @deity.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', admin_deities_path, :class=>"btn ml-10", :remote => true unless @deity.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

