
<%# Displays a detailed view of the temple %>
<%# Display Flash Message if any only in case of ajax request %>
<% if request.xhr? %>
	<%= render :partial=>"layouts/common/flash_message" %>
<% end %>

<div class="box p-10">

  <div class="row">
    <div class="col-md-3">
      <%= display_image(@temple, :photo, "100%") %>
    </div>

    <div class="col-md-9">
      <div class="heading1">This is a heading <%#= @temple.id %></div>
      <div class="heading2">Sub heading <%#= @temple.another_field %></div>
    </div>
  </div>

  <table class="table table-condensed table-hover table-striped mt-20">
    <tbody>
      <tr>
        <td class="bold" style="width:30%;">Id</td>
        <td><%= @temple.id %></td>
      </tr>
      <tr>
        <td class="bold" style="width:30%;">Created at</td>
        <td><%= display_time(@temple.created_at, "text-color-grey") %></td>
      </tr>
      <tr>
        <td class="bold" style="width:30%;">Last updated at</td>
        <td><%= display_time(@temple.updated_at, "text-color-grey") %></td>
      </tr>
    </tbody>
  </table>


  	<div class="row">
      <%= content_tag :span, "Trust:", :style=>"font-weight:bold", :class=>"col-md-4" %>
      <%= content_tag :span, @temple.trust_id, :class=>"col-md-8 ext-color-grey" %>
  	</div>

	<div class='italic m-10'><%= simple_format @temple.description %></div>

  <div class="cl-20"></div>

  <div class="palette-footer ml-10">
    <%= link_to raw("<i class=\"icon-pencil icon-white mr--5\"></i> Edit"), edit_admin_temple_path(@temple), :class=>"btn btn-default btn-xs pull-right ml-10", :remote=>true %>
    <%= link_to raw("<i class=\"icon-remove \"></i> Delete"), admin_temple_path(@temple), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-xs pull-right", :remote=>true %>
    <div class="cl-10"></div>
  </div>

</div>