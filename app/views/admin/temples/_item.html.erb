<%# describes about each temple %>
<div class="box hoverable p-10 box-border-black">

  <div class="row">
    <div class="col-md-2 visible-md visible-lg">
      <%= display_image(temple, :photo, "75%") %>
    </div>
    <div class="col-md-10">
      <%= link_to temple.id, admin_temple_path(temple),
          :remote=>true, :class=>"heading3" %><br/>

      <div class="content"><%#= scrap_word(temple.description, 160) %></div>

      <div class="mt-10 pull-right text-color-gray fs-11 visible-md visible-lg">
        <%= display_time(temple.created_at) %>
      </div>
  	</div>
  </div>

  <div class="cl"></div>

</div>

