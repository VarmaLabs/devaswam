
<%# Displays list of @temples %>
<div id="div_temple_collections">
	<% @temples.each do |temple| %>
		<div id="div_temple_<%= temple.id %>">
			<%= render :partial=>"item", :locals=>{:temple=>temple} %>
		</div>
	<% end %>
	<% if @temples.blank? %>
		<div id="div_temple_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @temples.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @temples, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
