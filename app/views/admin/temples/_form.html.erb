
<%# Renders a partial which is used to create a new temple %>

<%= form_for([:admin, @temple], :html => {:id=>"form_temple", :class=>"mb-0 form-horizontal", :role => "form", :method => (@temple.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @temple.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @temple.new_record? ? admin_temples_path : admin_temples_path(@temple) %>
    <%= hidden_field_tag :fmethod, @temple.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Name (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@temple,
                                              :object_name=>'temple',
                                              :field_name=>'name',
                                              :display_name=>'Name',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Description (text) -->
      <%= render :partial=>"field", :locals=>{:object=>@temple,
                                              :object_name=>'temple',
                                              :field_name=>'description',
                                              :display_name=>'Description',
                                              :field_type=>'text',
                                              :input_type=>'textarea',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

      <!-- Trust (integer) -->
      <%= render :partial=>"field", :locals=>{:object=>@temple,
                                              :object_name=>'temple',
                                              :field_name=>'trust_id',
                                              :display_name=>'Trust',
                                              :field_type=>'integer',
                                              :input_type=>'number',
                                              :required=>true,
                                              :place_holder=>"e.g: Put a suitable example here."} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@temple.new_record? ? "Create" : "Update"} Item" %>
			<%# if @temple.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', admin_temples_path, :class=>"btn ml-10", :remote => true unless @temple.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

